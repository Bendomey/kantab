{
  "name": "kantab",
  "version": "0.2.0",
  "description": "Kanban board application with Moleculer microservices & Vue.js",
  "scripts": {
    "dev": "moleculer-runner --env --repl --hot backend/services",
    "start": "moleculer-runner --env",
    "build:frontend": "cd frontend && npm run build",
    "lint": "eslint backend",
    "lint:fix": "eslint backend --fix",
    "deps": "npm-check -u",
    "ci": "jest -c jest.backend.config.js --watch",
    "ci:e2e": "cross-env TEST_E2E=open MONGO_URI=mongodb://localhost/kantab-e2e moleculer-runner --env backend/services",
    "test": "npm run test:backend",
    "test:backend": "jest --coverage --no-cache",
    "test:e2e": "cross-env TEST_E2E=run MONGO_URI=mongodb://localhost/kantab-e2e moleculer-runner --env backend/services",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/icebob/kantab.git"
  },
  "author": "Icebob",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "axios": "^0.21.1",
    "coveralls": "^3.1.0",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fakerator": "^0.3.2",
    "i18next-multiload-backend-adapter": "^1.0.0",
    "i18next-xhr-backend": "^3.2.2",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "maildev": "^1.1.0",
    "moleculer-repl": "^0.6.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@moleculer/lab": "^0.6.0",
    "accept": "3.1.3",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "connect-history-api-fallback": "1.6.0",
    "cookie": "^0.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "execa": "^5.0.0",
    "glob": "^7.1.6",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "handlebars": "^4.7.7",
    "hashids": "^2.2.8",
    "helmet": "^4.4.1",
    "i18next": "^19.0.0",
    "i18next-http-middleware": "^3.1.0",
    "i18next-node-fs-backend": "2.1.3",
    "ioredis": "^4.24.4",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "8.5.1",
    "moleculer": "^0.14.12",
    "moleculer-apollo-server": "^0.3.3",
    "moleculer-db": "^0.8.12",
    "moleculer-db-adapter-mongo": "^0.4.11",
    "moleculer-io": "^1.1.3",
    "moleculer-mail": "^1.2.5",
    "moleculer-web": "^0.10.0-beta3",
    "moment": "^2.29.1",
    "nats": "^1.3.2",
    "passport": "^0.4.1",
    "passport-facebook": "3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "2.0.0",
    "pug": "^3.0.2",
    "speakeasy": "2.0.0",
    "swagger-ui-dist": "^3.45.1",
    "swagger-ui-express": "^4.1.6",
    "uid-generator": "2.0.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./",
    "roots": [
      "./test"
    ]
  }
}
