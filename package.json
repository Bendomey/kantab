{
  "name": "kantab",
  "version": "0.3.0",
  "description": "Kanban board application with Moleculer microservices & Vue.js",
  "scripts": {
    "dev": "node --inspect node_modules/moleculer/bin/moleculer-runner.js --env --repl --hot backend/services",
    "start": "moleculer-runner --env",
    "build:frontend": "cd frontend && npm run build",
    "lint": "eslint backend",
    "lint:fix": "eslint backend --fix",
    "deps": "npm-check -u",
    "ci:backend": "jest --watch",
    "ci:e2e": "cross-env TEST_E2E=open MONGO_URI=mongodb://localhost/kantab-e2e moleculer-runner --env backend/services",
    "test": "npm run test:backend",
    "test:backend": "jest --coverage --no-cache",
    "test:e2e": "cross-env TEST_E2E=run MONGO_URI=mongodb://localhost/kantab-e2e moleculer-runner --env backend/services",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build:docker": "docker build -t kantab:latest .",
    "gen:compose": "cross-env ONLY_GENERATE=true moleculer-runner --env backend/services",
    "dc:up": "docker-compose up -d",
    "dc:down": "docker-compose down",
    "cli:prod": "moleculer connect --ns kantab-prod nats://localhost:4222"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/icebob/kantab.git"
  },
  "author": "Icebob",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "axios": "^0.21.1",
    "coveralls": "^3.1.0",
    "cypress": "^7.6.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fakerator": "^0.3.3",
    "i18next-multiload-backend-adapter": "^1.0.0",
    "i18next-xhr-backend": "^3.2.2",
    "jest": "^27.0.5",
    "jest-cli": "^27.0.5",
    "maildev": "^1.1.0",
    "moleculer-repl": "^0.6.6",
    "npm-check": "^5.9.2",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "@moleculer/database": "github:moleculerjs/database",
    "@moleculer/lab": "^0.6.0",
    "accept": "3.1.3",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "connect-history-api-fallback": "1.6.0",
    "cookie": "^0.4.1",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "execa": "^5.1.1",
    "glob": "^7.1.7",
    "graphql": "^15.5.1",
    "graphql-depth-limit": "1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "handlebars": "^4.7.7",
    "hashids": "^2.2.8",
    "helmet": "^4.6.0",
    "i18next": "^20.3.2",
    "i18next-http-middleware": "^3.1.4",
    "i18next-node-fs-backend": "2.1.3",
    "ioredis": "^4.27.6",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "8.5.1",
    "moleculer": "^0.14.14",
    "moleculer-apollo-server": "^0.3.4",
    "moleculer-db": "^0.8.14",
    "moleculer-db-adapter-mongo": "^0.4.12",
    "moleculer-io": "^1.1.3",
    "moleculer-mail": "^1.2.5",
    "moleculer-web": "^0.10.0",
    "moment": "^2.29.1",
    "nats": "^2.0.8",
    "passport": "^0.4.1",
    "passport-facebook": "3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "2.0.0",
    "pluralize": "^8.0.0",
    "pug": "^3.0.2",
    "slugify": "^1.5.3",
    "speakeasy": "2.0.0",
    "swagger-ui-dist": "^3.51.0",
    "uid-generator": "2.0.0"
  },
  "engines": {
    "node": ">= 12.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./",
    "roots": [
      "./test"
    ]
  }
}
