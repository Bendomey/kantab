{
	// Use IntelliSense to learn about possible Node.js debug attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug",
			"program": "${workspaceRoot}/node_modules/moleculer/bin/moleculer-runner.js",
			"cwd": "${workspaceRoot}",
			"args": [
				"--hot",
				"--env",
				"backend/services/config.service.js",
				"backend/services/accounts.service.js",
				"backend/services/boards.service.js"
			],
			"env":{"PORT": 4000}
		},
		{
			"name": "Attach",
			"port": 9229,
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"restart": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "E2E test",
			"program": "${workspaceRoot}/node_modules/moleculer/bin/moleculer-runner.js",
			"cwd": "${workspaceRoot}",
			"env": {
				"TEST_E2E": "true",
				"MONGO_URI": "mongodb://localhost/kantab-e2e"
			},
			"args": [
				"--env",
				"backend/services"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest",
			"program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
			"args": [
				"--testMatch",
				"**/integration/**/*.spec.js",
				"--runInBand"
			],
			"cwd": "${workspaceRoot}",
			"runtimeArgs": [
                "--nolazy"
            ]
		}
	]
}
